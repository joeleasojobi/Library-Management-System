<section>
  <header>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <button
        class='navbar-toggler'
        type='button'
        data-toggle='collapse'
        data-target='#navbarTogglerDemo01'
        aria-controls='navbarTogglerDemo01'
        aria-expanded='false'
        aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarTogglerDemo01'>
        <a class='navbar-brand' href='/admin/viewbook'>Library</a>
        <ul class='navbar-nav mr-auto mt-2 mt-lg-0'>
          <li class='nav-item'>
            <a href='/admin/viewbook' class='nav-link active'>Book Log</a>
          </li>
          <li class='nav-item'>
            <a href='/admin/addbook' class='nav-link'>Add a Book</a>
          </li>
          <li class='nav-item'>
            <a href='/admin/member' class='nav-link'>Member List</a>
          </li>
        </ul>
        <div class='dropdown'>
          <button
            class='btn btn-secondary dropdown-toggle'
            type='button'
            id='dropdownMenuButton'
            data-toggle='dropdown'
            aria-haspopup='true'
            aria-expanded='false'>
            {{#if admin}}
              {{admin.Name}}
            {{else}}
              Account
            {{/if}}
          </button>
          <div class='dropdown-menu' aria-labelledby='dropdownMenuButton'>
            {{#if admin}}
              <a class='dropdown-item' href='/admin/logout'>Logout</a>
            {{else}}
              <a class='dropdown-item' href='/admin/login'>Login</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>
  </header>
</section>

<section class='pt-4 pl-3 pr-4'>
  <table class='table' id='productsTable'>
    <thead>
      <tr>
        <th scope='col'>No</th>
        <th scope='col'>Book Name</th>
        <th scope='col'>Author</th>
        <th scope='col'>Category</th>
        <th scope='col'>Status</th>
        <th scope='col'>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each book}}
        <tr>
          <td>{{this.No}}</td>
          <td>{{this.Name}}</td>
          <td>{{this.Author}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Status}}</td>
          <td>
              <a href='/admin/editbook/{{this._id}}' class='btn btn-primary'>Edit</a>
              <a 
              href='/admin/delete-book/{{this._id}}' 
              class='btn btn-danger'
              onclick="return confirm('Do you want to Delete {{this.name}}')">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>