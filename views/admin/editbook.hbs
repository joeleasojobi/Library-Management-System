<section>
  <div class='container mt-4'>
    <div class='row'>
      <div class='col-md-6'>
        <h2 class='text-center'>Edit Book</h2>
        <form action='/admin/editbook/{{book._id}}' method='post' enctype="application/x-www-form-urlencoded">
          <label for=''>Book No</label>
          <input type='text' name='No' class='form-control' value='{{book.No}}'/>

          <label for=''>Book Name</label>
          <input type='text' name='Name' class='form-control' value='{{book.Name}}'/>

          <label for=''>Book Author</label>
          <input type='text' name='Author' class='form-control' value='{{book.Author}}'/>

          <label>Book Category</label>
          <input type='text' name='Category' class='form-control' value='{{book.Category}}'/>

          <p>Status</p>

          <label class='radio-inline'>
          <input type='radio' name='Status' value='Available'/>Available</label>

          <label class='radio-inline mt-2'>
          <input type='radio' name='Status' value='Not Available' />Not Available</label>

          <button type='submit' class='btn btn-success float-right'>ADD</button>
        </form>
      </div>
    </div>
  </div>
</section>